{
  "extends": "tsconfig-config/next.json",
  "exclude": ["node_modules", "dist", "coverage"],
  "include": ["next-env.d.ts", "**/*.d.ts", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": "./src",
    "allowJs": true,
    "moduleResolution": "node",

    "noEmit": true,
    "module": "esnext",

    "jsx": "preserve",
    "paths": {
      "@/pages/*": ["./pages/*"],
      "@/public/*": ["../public/*"],
      "@wayofdev/ui/*": ["../../../packages/ui/src/*"],
      "@wayofdev/ui": ["../../../packages/ui/src/index"]
    }
  }
}
