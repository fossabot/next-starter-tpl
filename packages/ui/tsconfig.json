{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "exclude": ["dist", "build", "node_modules"],
  "include": ["./src"],
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": "./src",
    "outDir": "dist",
    "allowJs": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "noEmit": false
  }
}
